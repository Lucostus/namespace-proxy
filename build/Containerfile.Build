FROM registry.access.redhat.com/ubi9/go-toolset:1.19.6-2 as go-builder
WORKDIR /app/multena-proxy
COPY go.mod go.sum ./
RUN go mod verify
COPY . .
RUN go build .

FROM registry.access.redhat.com/ubi9/ubi-micro:9.1
EXPOSE 8080
WORKDIR /app/
COPY --from=go-builder /app/multena-proxy/multena-proxy .
USER 1001
HEALTHCHECK --timeout=10s CMD curl --fail http://localhost:8080/healthz || exit 1
ENTRYPOINT [ "/app/multena-proxy" ]